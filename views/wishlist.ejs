<!DOCTYPE html>
<html lang="en">
<head>
    <title>Wishlist - ATHLETEX</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen text-center px-4 py-6 font-sans">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Your Wishlist</h1>

    <% if (message) { %>
        <p class="text-lg text-gray-600"><%= message %></p>
    <% } else { %>
        <div id="wishlist" class="flex flex-wrap justify-start gap-6 max-w-screen-xl mx-auto">
            <% wishlistItems.forEach(item => { %>
                <div class="wishlist-item w-full sm:w-[48%] md:w-[32%] bg-white rounded-lg shadow-lg p-4 transition-transform duration-300 hover:-translate-y-1">
                    <img src="<%= item.image %>" alt="<%= item.name %>" class="w-full h-52 object-cover rounded-md mb-4" />
                    <h3 class="text-lg font-semibold text-gray-800 mb-1"><%= item.name %></h3>
                    <p class="text-gray-600 mb-1"><%= item.details %></p>
                    <p class="text-gray-700 mb-4">Price: $<%= item.price %> | Discount: <%= item.discount %>%</p>

                    <button class="add-to-cart bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md font-bold mr-2 mt-2" data-productid="<%= item.productId %>">Move to Cart</button>
                    <button class="remove-from-wishlist bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md font-bold mt-2" data-productid="<%= item.productId %>">Remove</button>
                </div>
            <% }) %>
        </div>
    <% } %>

    <a href="/" class="continue-shopping inline-block bg-black hover:bg-blue-700 text-white px-6 py-3 mt-8 rounded-md font-semibold shadow-md transition-all duration-200">Continue Shopping</a>

    <script src="../static/wishlist.js"></script>
</body>
</html>
