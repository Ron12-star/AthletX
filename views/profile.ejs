<!-- profile.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Profile</title>
  <link rel="stylesheet" href="/css/profile.css">
</head>

<body>
  <a href="/logout" class="logout-btn">
    <i class="fa-solid fa-sign-out-alt"></i> Logout
  </a>
  <a href="/" class="back-btn">
    <i class="fa-solid fa-arrow-left"></i> Back to Dashboard
  </a>

  <div class="profile-container">
    <div class="sidebar">
      <div class="icon active"><i class="fa-solid fa-user"></i></div>
      <div class="icon"><i class="fa-solid fa-lock"></i></div>
      <div class="icon"><i class="fa-solid fa-bell"></i></div>
      <div class="icon"><i class="fa-solid fa-refresh"></i></div>
    </div>

    <div class="profile-card">
      <h1>Profile</h1>
      <form action="/profile/update" method="POST" enctype="multipart/form-data">
        <div class="profile-img-wrapper">
          <img src="<%= user.image || 'https://via.placeholder.com/100?text=Photo' %>" class="profile-img"
            alt="Profile Photo" />

          <!-- Hidden file input -->
          <input type="file" name="image" id="file-upload" class="upload-hidden" />

          <!-- Label acts like button -->
          <label for="file-upload" class="upload-label">
            <i class="fa fa-camera"></i>
          </label>
        </div>



        <label>User Name</label>
        <input type="text" name="name" value="<%= user.name %>" />

        <label>Email</label>
        <input type="email" name="email" value="<%= user.email %>" readonly />

        <label>Password</label>
        <input type="password" name="password" placeholder="••••••••" />

        <label>Location</label>
        <input type="text" name="location" value="<%= user.location || '' %>" />

        <label>Phone</label>
        <input type="text" name="phone" value="<%= user.phone || '' %>" />

        <button class="save-btn" type="submit">Save</button>
      </form>

    </div>
  </div>
</body>

</html>