<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home - ATHLETEX</title>
  <link rel="stylesheet" href="/css/home.css" type="text/css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

</head>

<body>
  <main>
    <div class="panel">
      <div class="one">
        <!-- <i class="fa-sharp fa-solid fa-bars"></i> -->
        <a href="/" class="panellink">
          <h3>ATHLETEX</h3>
        </a>

        <!-- Search Bar -->
        <form action="/search" method="GET">
          <input type="text" name="q" id="search-input" placeholder="Search products..." required />
          <button type="submit">Search</button>
        </form>
      </div>
      <div class="two">
        <% if (session && session.user) { %>
          <a href="/profile" class="panellink">
            <i class="fa-solid fa-user"></i>
            <p>Profile</p>
          </a>
          <% } else { %>
            <a href="/login" class="panellink">
              <i class="fa-solid fa-sign-in-alt"></i>
              <p>Login</p>
            </a>
            <% } %>
              <div class="two_one">
                <a href="Wishlist" class="panellink">
                  <i class="fa-regular fa-heart"></i>
                  <p>Wishlist</p>
                </a>
              </div>
              <div class="two_one">
                <a href="add-to-cart" class="panellink">
                  <i class="fa-solid fa-cart-shopping"></i>
                  <p>Cart</p>
                </a>
              </div>
              <div class="two_one">
                <a href="/order-status" class="panellink" style="color: rgb(0, 0, 0); font-weight: bold;">
                  <i class="fa-solid fa-box"></i>
                  <p>Track Order</p>
                </a>
              </div>


      </div>
    </div>

    <div class="discount_panel">
      <div id="discount">
        <div class="discount_one">
          <p>
            FREE delivery above $999/- Applicable on ATHLETEX Products only
          </p>
        </div>
        <i class="fa-solid fa-x" id="closeButton"></i>
      </div>
      <img src="/Images/offer image.avif" alt="Offer image" />
    </div>

    <div class="category-container">
      <a href="/category/WinterCollection" class="category-box">
        <img src="/Images/Winter collection.avif" alt="Winter Collection" />
        <p>Winter Collection</p>
      </a>
      <a href="/category/Men" class="category-box">
        <img src="/Images/men.avif" alt="Men" />
        <p>Men</p>
      </a>
      <a href="/category/Women" class="category-box">
        <img src="/Images/women.avif" alt="Women" />
        <p>Women</p>
      </a>
      <a href="/category/Kids" class="category-box">
        <img src="/Images/Kids.avif" alt="Kids" />
        <p>Kids</p>
      </a>
      <a href="/category/Shoes" class="category-box">
        <img src="/Images/Shoes.avif" alt="Shoes" />
        <p>Shoes</p>
      </a>
      <a href="/category/Equipment" class="category-box">
        <img src="/Images/Equipment & cycles.avif" alt="Equipment & Cycles" />
        <p>Equipment & Cycles</p>
      </a>
      <a href="/category/Bags & Backpacks" class="category-box">
        <img src="/Images/Bags and Backpacks.avif" alt="Bags & Backpacks" />
        <p>Bags & Backpacks</p>
      </a>
      <a href="/category/Sports Accessories" class="category-box">
        <img src="/Images/Sport Accessories.avif" alt="Sport Accessories" />
        <p>Sport Accessories</p>
      </a>
    </div>
    <!-- --------------------------------------------------------------------------- -->
    <div class="carousel-container">
      <div class="carousel" id="carouselTop">
        <div class="slide">
          <img src="/upper1.avif" alt="Ad 1" />
        </div>
        <div class="slide">
          <img src="/upper2.avif" alt="Ad 2" />
        </div>
        <div class="slide">
          <img src="/lower2.avif" alt="Ad 3" />
        </div>
      </div>

      <button class="scroll-btn scroll-left" onclick="scrollCarousel(-1)">
        &#10094;
      </button>
      <button class="scroll-btn scroll-right" onclick="scrollCarousel(1)">
        &#10095;
      </button>
    </div>
    <!-- -------------------------------------------------------------- -->
    <div id="after_advertisement">
      <img src="/Images/after advertisement.avif" alt="" />
    </div>
    <!-- High Discount Product Slider -->
    <div class="heading">
      <h1>High discount</h1>
    </div>
    <div class="product-container" id="highDiscountContainer">

      <button class="scroll-btn scroll-left" data-target="discount_list">&#10094;</button>

      <div id="discount_list" class="scroll-wrapper">
        <div class="product-slider">
          <% if (HighDiscountProducts && HighDiscountProducts.length> 0) { %>
            <% HighDiscountProducts.forEach(product=> { %>
              <div class="product-card high-discount">
                <img src="<%= product.image %>" alt="<%= product.name %>" />
                <h3>
                  <%= product.name %>
                </h3>
                <p>
                  Price: <del>$<%= product.price %></del>
                  <strong>$<%= (product.price - (product.price * product.discount / 100)).toFixed(2) %></strong>
                </p>
                <p>
                  <%= product.details %>
                </p>
                <p class="highlight">Discount: <%= product.discount %>%</p>
                <button class="add-to-cart" data-productid="<%= product._id %>">Add to Cart</button>
              </div>
              <% }) %>
                <% } else { %>
                  <p>No high-discount products available.</p>
                  <% } %>
        </div>
      </div>
      <button class="scroll-btn scroll-right" data-target="discount_list">&#10095;</button>
      <button id="toggleHighDiscount" class="toggle-view-btn"
        onclick="toggleView('highDiscountContainer', 'toggleHighDiscount')">
        Show All Products
      </button>
    </div>
    <!---------------------------------------------------------------------------->
    <div class="carousel-container">
      <div class="carousel">
        <div class="slide"><img src="/lower1.avif" alt="Ad 1" /></div>
        <div class="slide"><img src="/lower2.avif" alt="Ad 2" /></div>
        <div class="slide"><img src="/lower3.avif" alt="Ad 3" /></div>
      </div>
      <button type="button" class="scroll-btn scroll-left carousel-btn" data-target="carousel">&#10094;</button>
      <button type="button" class="scroll-btn scroll-right carousel-btn" data-target="carousel">&#10095;</button>
    </div>
    <!-- low Discount Product Slider -->
    <div class="product-container" id="lowDiscountContainer">
      <button type="button" class="scroll-btn scroll-left" data-target="product_list">&#10094;</button>


      <div id="product_list" class="scroll-wrapper">
        <div class="product-slider">
          <% if (LowDiscountProducts && LowDiscountProducts.length> 0) { %>
            <% LowDiscountProducts.forEach(product=> { %>
              <div class="product-card low-discount">
                <img src="<%= product.image %>" alt="<%= product.name %>" />
                <h3>
                  <%= product.name %>
                </h3>
                <p>
                  Price:
                  <% if (product.discount> 0) { %>
                    <del>$<%= product.price %></del>
                    <% } %>
                      <strong>$<%= (product.price - (product.price * product.discount / 100)).toFixed(2) %></strong>
                </p>
                <p>
                  <%= product.details %>
                </p>
                <% if (product.discount> 0) { %>
                  <p class="highlight">Discount: <%= product.discount %>%</p>
                  <% } %>
                  <p>Stock Left: {quantity - sales}</p>
                    <button type="button" class="add-to-cart" data-productid="<%= product._id %>">Add to Cart</button>
                    <!-- ✅ Add to Wishlist Button -->
                    <form action="/wishlist" method="POST" style="display:inline;">
                      <input type="hidden" name="productId" value="<%= product._id %>">
                      <button type="submit" class="wishlist-btn">❤️ Wishlist</button>
                    </form>
              </div>
              <% }) %>
                <% } else { %>
                  <p>No low-discount products available.</p>
                  <% } %>
        </div>
      </div>
      <button type="button" class="scroll-btn scroll-right" data-target="product_list">&#10095;</button>
      <button id="toggleLowDiscount" class="toggle-view-btn"
        onclick="toggleView('lowDiscountContainer', 'toggleLowDiscount')">
        Show All Products
      </button>
    </div>
    <footer class="site-footer">

      <!-- Footer Content -->
      <div class="footer-grid">
        <!-- About -->
        <div class="footer-section">
          <h2><i class="fa-solid fa-bicycle"></i> Athlete</h2>
          <p>At AthleteX, we empower every athlete — men, women, and children — with premium sports equipment and
            performance-ready apparel. Whether you're hitting the gym, the field, or the track, our gear is designed to
            elevate your game and style. Your journey to greatness starts here.</p>
          <div class="social-icons">
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-linkedin"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
            <a href="#"><i class="fab fa-facebook"></i></a>
          </div>
        </div>


        <!-- Company -->
        <div class="footer-section">
          <h3>Company</h3>
          <ul>
            <li><a href="/about">About</a></li>
            <li><a href="/team">Team</a></li>
            <li><a href="/shop">Shop</a></li>
            <li><a href="/privacy-policy">Privacy Policy</a></li>
          </ul>
        </div>

        <!-- Services -->
        <div class="footer-section">
          <h3>Our Services</h3>
          <ul>
            <li><a href="/services/personal-fitting">Personal Gear Fitting</a></li>
            <li><a href="/services/sports-coaching">Online Sports Coaching</a></li>
            <li><a href="/services/equipment-rental">Sports Equipment Rental</a></li>
            <li><a href="/services/repair-center">Equipment Repair & Maintenance</a></li>
            <li><a href="/services/community-events">Local Sports Events</a></li>
          </ul>
        </div>


        <!-- Contact -->
        <div class="footer-section">
          <h3>Contact</h3>
          <ul>
            <li><i class="fa-solid fa-location-dot"></i> Ahmedabad, Gujarat, India</li>
            <li><i class="fa-solid fa-phone"></i> 12 345 678 9101</li>
            <li><i class="fa-solid fa-envelope"></i> AthletX@gmail.com</li>
          </ul>
        </div>
      </div>

      <!-- Footer Bottom -->
      <div class="footer-bottom">
        <p> All Rights Reserved</p>
        <div class="footer-links">
          <a href="/terms">Terms & Condition</a>
          <a href="/privacy-policy">Privacy Policy</a>
          <a href="/contact">Contact Us</a>
        </div>
      </div>
    </footer>

  </main>
  <script src="/static/index.js" type="text/javascript"></script>
</body>

</html>